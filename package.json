    "relay modern",
    "react boilerplate",
    "build",
    "webpack"
  ],
  "author": "@pt-br",
  "bugs": {
    "url": "git+https://github.com/pt-br/relay-modern-boilerplate.git/issues"
  },
  "homepage": "git+https://github.com/pt-br/relay-modern-boilerplate.git",
  "dependencies": {
    "css-loader": "^2.1.1",
    "found": "^0.3.4",
    "found-relay": "next",
    "graphql-relay": "^0.5.2",
    "normalize.css": "^7.0.0",
    "postcss": "^7.0.36",
    "postcss-calc": "^7.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
