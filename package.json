{
  "name": "react-relay-modern-starter-kit",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn run fetch-schema && yarn run relay && webpack-dev-server --hot --open --config ./config/webpack.config.js",
    "soft-start": "webpack-dev-server --hot --open --config ./config/webpack.config.js",
    "build": "yarn run relay && webpack -p --config ./config/webpack.production.config.js",
    "relay": "relay-compiler --src ./src --schema ./public/schema.json",
    "fetch-schema": "graphql-js-schema-fetch http://localhost:8080/graphql > public/schema.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pt-br/relay-modern-boilerplate.git"
  },
  "keywords": [
    "relay modern boilerplate",
    "relay modern",
    "react boilerplate",
    "build",
    "webpack"
  ],
  "author": "@pt-br",
  "bugs": {
    "url": "git+https://github.com/pt-br/relay-modern-boilerplate.git/issues"
  },
  "homepage": "git+https://github.com/pt-br/relay-modern-boilerplate.git",
  "dependencies": {
    "found": "^0.3.4",
    "found-relay": "next",
    "graphql-relay": "^0.5.2",
    "normalize.css": "^7.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-relay": "^1.3.0",
    "relay-compiler": "^1.3.0",
    "relay-runtime": "^1.3.0",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-relay": "^1.3.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "graphql-js-schema-fetch": "^1.1.2",
    "html-webpack-plugin": "^2.30.1",
    "react-hot-loader": "next",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.8.2"
  }
}
